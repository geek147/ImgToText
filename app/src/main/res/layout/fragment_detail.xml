<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/writtenText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:gravity="center"
        android:text="Written Text"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:id="@+id/editTextWritten"
        android:gravity="center"
        android:hint="example: i can fly"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/writtenText"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/distanceDetailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:textSize="14sp"
        android:text="Distance to Plaza Indonesia Jakarta"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/editTextWritten"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:textSize="14sp"
        android:hint="example: 32 km"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/distanceDetailText"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/etaText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:textSize="14sp"
        android:gravity="center"
        android:text="Estimated Time to Plaza Indonesia Jakarta"
        app:layout_constraintTop_toBottomOf="@id/editTextDistance"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextEta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:textSize="14sp"
        android:hint="example: 1 hour"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/etaText"/>

</androidx.constraintlayout.widget.ConstraintLayout>